


<%= search_form_for @search do |f|%>
  <%= f.label :name_or_address_cont, "Select restaurant" %>
  <%= f.search_field :name_or_address_cont %>
  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end %>

<% if @search.result.empty? %>

<h4>No restaurant was found, please click  <%= link_to 'HERE', new_restaurant_path %> to add new</h4> 
<% else %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Telephone</th>
      <th>Webpage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.name, restaurant %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.zip_code %></td>
        <td><%= restaurant.telephone %></td>
        <td><%= restaurant.webpage %></td>
        <td><%= link_to 'Show ', restaurant %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>



<% end %>
